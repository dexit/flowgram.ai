{
  "testMatch": ["**/test/**/*.spec.ts"],
  "watchPathIgnorePatterns": ["<rootDir>/test/.+?\\.flow\\.js"],
  "collectCoverage": true,
  "coveragePathIgnorePatterns": ["<rootDir>/src/types/", "<rootDir>/test/", "<rootDir>/web/"],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
